                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/zone_one_weather_icon_one"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
